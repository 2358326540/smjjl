.container {
  width: 100% !important;
  margin: 0 auto;
  outline: none;
  background-color: #ebebeb;
  margin-top: -60px;
}

body { font-family: 'Helvetica Neue', 'Arial', 'Microsoft YaHei', 'sans-serif'; }
*{margin: 0px; padding: 0px;}
li{list-style: none;}
img{ border:none;}
.clear{ clear:both;}
.fa-long-arrow-up.top{
  font-size: 18px;
  color: #eb6d20; 
}

.top_bg{
  width:100%;
  background-color: #f9f9f9;
  border-bottom:1px solid #efefef;  
}
.top{
  padding-top: 24px;
  padding-bottom: 24px;
  width: 990px;
  margin: 0 auto;
}
.logo{
  float: left;
}
.top .search{
  outline: none;
  position: relative;
  left: 285px;
}
.top .searchgoods{
  margin-left:70px;
  height: 26px; 
  position: absolute;
}
.search span{
  position: relative;
  left: -55px;
  color: white;
  text-decoration: none;
}
.down{
  display: inline-block;
  float: right;
  line-height: 36px;
  font-size: 14px;
  color: #eb6d20;
}
.moneydown{
  color: #eb6d20;
  padding-right: 10px;
  line-height: 36px;
}
.list{
  height: 45px;
  width: 100%;
  background-color:#f9f9f9;
  box-shadow: 5px 5px 5px #ccc;
}
.list ul{
  width: 990px;
  margin: 0 auto;
}
.list ul li{
  float: left;
  padding-right: 63px;

  font-size: 14px; 
  line-height: 45px;
}
.list ul a{
  color:#eb6d20;
}
.list a:hover{
  color: #d8d8d8;
  text-decoration: none;
}
.list a:active{
  color: #d8d8d8;
}
.content{
  width: 100%;
  margin-top: 20px;
}
.content_main{
  width: 1000px;
  margin: 0 auto;
}
.unified{
  width: 180px;
  float: left;
  /*margin-right: 18px;*/
  padding-bottom:5px;
  position: relative;
}

.unified dd{
  padding-top: 10px;
}

.fixed{
  width: 174px;
  height: 174px;
}
.price ul{
  float: left;
  margin-left: 5px;
}
.price li{
  line-height: 22px;
}
.now{
  font-size: 24px;
  color: #eb6d20;
}
.before{
  font-size: 12px;
  color: #eb6d20;
}
.price{
  width: 180px;
  border-bottom: 1px solid #e4e4e4;
  margin-top: -10px;
}

.price_down{
  float: right;

}

.price_down span{
  display: inline-block;
  background-image: url('<%= image_url "down_11.png" %>');
  background-repeat: no-repeat;
  text-align: center;
  width: 80px;
  height: 40px;
  font-size: 12px;
  color: #5ba525;
  padding-top: 5px;
}
.zhangfu span{
  background: url('<%= image_url "zhangfu.png" %>');
  background-repeat: no-repeat;
  text-align: center;
  display: inline-block;
  font-size: 12px;
  color: #fff;
  width: 66px;
  height: 50px;
  line-height: 15px;
  padding-top: 5px;
}
.zhangfu{
  position:absolute;
  top: 0px;
  left:100px;

}
.zhangf span{
  background: url('<%= image_url "zhangf.png" %>');
  background-repeat: no-repeat;
  text-align: center;
  display: inline-block;
  font-size: 12px;
  color: #fff;
  width: 66px;
  height: 50px;
  line-height: 15px;
  padding-top: 5px;
}
.zhangf{
  position:absolute;
  top: 0px;
  left:100px;

}
.gotosee p{
  float: left;
  font-size: 12px;
  color: #989898;
  margin-left: 5px;
  line-height: 30px;
}
.gotosee a{
  float: right;
  font-size: 14px;
  color: #fff;

}
.gotosee{
  margin-top: 8px;
}
.fenye{
  width: 990px;
  border-top: 2px solid #e4e4e4;
  margin: 0 auto;
  padding-top: 25px;
}
.fenye ul a{
  color: #e97000;
}
.fenye ul .larr{
  color:#999999;
}
.fenye ul .rarr{
  color:#999999;
}
.fenye ul a:hover{
  color: #999;
}

.footer{
  width: 990px;
  margin: 0 auto;
  border-top: 2px solid #e97000;
  padding-top: 22px;
  margin-top: 50px;
}
.footer p{
  display: inline-block;
  font-size: 14px;
  color:#b3b3b3;
}
.footer span{
  color: #e97000;
  padding-left: 40px;
  font-size: 14px;
}
.footer .left{
  float: left;
}
.footer .right{
  float: right;
}
